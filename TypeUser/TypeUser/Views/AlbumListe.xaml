<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TypeUser.ViewModel"
             x:Class="TypeUser.Views.AlbumListe" NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <local:AlbumModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <StackLayout BackgroundColor="Black" Padding="5">
            <Label Text="Albums" 
                   FontSize="20" HorizontalOptions="StartAndExpand"
                   FontAttributes="Bold"/>
            <Frame CornerRadius="12" Margin="4"
                   Padding="3">
                <ListView x:Name="Albumliste" ItemsSource="{Binding AllAlbums}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout BackgroundColor="#242424" Margin="3">
                                    <Label Text="{Binding Title}" TextColor="White" FontSize="18" FontAttributes="Italic" HorizontalOptions="StartAndExpand"/>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>