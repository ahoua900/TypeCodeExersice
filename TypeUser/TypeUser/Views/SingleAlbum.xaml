<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TypeUser.ViewModel"
             x:Class="TypeUser.Views.SingleAlbum">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="White" Padding="5">
                <Image Source="mail" HorizontalOptions="CenterAndExpand" Aspect="AspectFill" HeightRequest="200"/>
                <Label  FontAttributes="Bold" FontSize="15" Text="{Binding Title}" HorizontalOptions="Center"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>